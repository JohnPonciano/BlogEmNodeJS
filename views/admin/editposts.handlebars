
{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}




<div class="card">

<div class="card-body"> 
    <h4>Edit Post</h4>
    <form action="/admin/posts/edit" method="POST">
        <input type="hidden" value="{{posts._id}}" name="id">
        
        <label for="titulo">Tutilo: </label>
        
        <input type="text" name="titulo" class="form-control" value="{{posts.titulo}}" required >
        
        <label for="slug">Slug: </label>
        
        <input type="text" name="slug" class="form-control" value="{{posts.slug}}" required >
        
        <label for="descricao">Descrição: </label>
        
        <input type="text" name="descricao" class="form-control" value="{{posts.descricao}}" required >
        
        <label for="slug">Conteudo:   </label>
        
        <textarea name="conteudo" class="form-control" required >{{posts.conteudo}}</textarea>   
        
        <label for="categorias">Categorias</label>
        
        
                <select class="custom-select" name="categorias" >
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    
                    {{else}}
                        <option value="0">Nenhuma categoria existente</option>
                    
                    {{/each}}
                </select>
        <button type="submit" class="btn btn-success mt-4" >Editar Post</button>
       
    </form>

</div>
</div>