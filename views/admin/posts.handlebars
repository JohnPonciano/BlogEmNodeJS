

<h2>Lista de Post</h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Novo Post</button></a>

{{#each posts}}

    <div class="card mt-2">
        <div class="card-body">
                <h4>{{titulo}}</h4>
                <p>Descrição: {{descricao}}</p>
                <small>Data: {{data}}</small>
                <small>Categoria:{{categoria}}</small>
                <br>
               
               <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>,
               <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-4">Delete</button></a>
        </div>
    </div>


{{else}}
    <p>Nenum post</p>
{{/each}}
