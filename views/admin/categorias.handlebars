<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add">
<button class="btn btn-success">Novas categorias </button></a>

{{#each categorias}}

    <div class="card mt-4">
        <div class="card-body ">
            <h4>
                {{nome}}
            </h4>
            <small>Slug: {{slug}}</small>
            <small>Data : {{date}}</small>
        </div>
    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success ml-4 mb-4">Editar</button></a>
   
   
    <form action="/admin/categorias/delete" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger ml-4 mb-4">Deletar</button>
    </form>
    
    </div>
{{else}}
    <h4 class="mt-3" >Nenhuma categoria registrada</h4>
{{/each}}